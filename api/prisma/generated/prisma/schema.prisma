generator client {
  provider = "prisma-client-js"
  output   = "generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  uid            String?   @unique // Optional but recommended to have
  name           String?
  email          String    @unique
  password       String
  stripeId       String?
  isPaymentSetup Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  payments       Payment[]
}

model Payment {
  id            Int      @id @default(autoincrement())
  userId        Int
  amount        Float
  paymentDate   DateTime
  transactionId String
  user          User     @relation(fields: [userId], references: [id])
}
